local DSanimations = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local GuiTopFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local ScrollingFrame = Instance.new("ScrollingFrame")
local WeirdMove = Instance.new("TextButton")

-- Basic GUI Setup
DSanimations.Name = "DSanimations"
DSanimations.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

MainFrame.Name = "MainFrame"
MainFrame.Parent = DSanimations
MainFrame.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -50)
MainFrame.Size = UDim2.new(0, 300, 0, 100)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)

GuiTopFrame.Name = "GuiTopFrame"
GuiTopFrame.Parent = MainFrame
GuiTopFrame.BackgroundColor3 = Color3.new(0.9, 0.3, 0.3)
GuiTopFrame.Size = UDim2.new(1, 0, 0, 30)

Title.Name = "Title"
Title.Parent = GuiTopFrame
Title.Text = "DSanimations â€¢ Kotik243h"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Size = UDim2.new(1, 0, 1, 0)

ScrollingFrame.Parent = MainFrame
ScrollingFrame.Position = UDim2.new(0, 0, 0, 30)
ScrollingFrame.Size = UDim2.new(1, 0, 1, -30)
ScrollingFrame.CanvasSize = UDim2.new(0, 0, 1, 0)

-- Weird Move Button
WeirdMove.Name = "WeirdMove"
WeirdMove.Parent = ScrollingFrame
WeirdMove.Text = "WEIRD MOVE"
WeirdMove.Size = UDim2.new(0.9, 0, 0, 40)
WeirdMove.Position = UDim2.new(0.05, 0, 0, 10)
WeirdMove.BackgroundColor3 = Color3.new(0.4, 0.4, 0.8)

-- Animation Logic
local animationCache = {}
local activeAnimation = nil

local function loadAnimation(id)
    if not animationCache[id] then
        local anim = Instance.new("Animation")
        anim.AnimationId = "rbxassetid://215384594"
        animationCache[id] = game.Players.LocalPlayer.Character.Humanoid:LoadAnimation(anim)
    end
    return animationCache[id]
end

WeirdMove.MouseButton1Click:Connect(function()
    if activeAnimation then
        activeAnimation:Stop()
        activeAnimation = nil
        WeirdMove.BackgroundColor3 = Color3.new(0.4, 0.4, 0.8)
    else
        activeAnimation = loadAnimation("weird_move")
        activeAnimation:Play()
        WeirdMove.BackgroundColor3 = Color3.new(0.8, 0.4, 0.4)
    end
end)

-- Stylish Effects
game:GetService("RunService").Heartbeat:Connect(function()
    WeirdMove.Rotation = math.sin(tick() * 5) * 2
    WeirdMove.TextColor3 = Color3.new(
        math.abs(math.sin(tick() * 0.5)),
        math.abs(math.cos(tick() * 0.7)),
        math.abs(math.sin(tick() * 0.3))
    )
end)
